<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.nebuladevelopers.parkme.activities.AppDetailsActivity"
    tools:showIn="@layout/app_bar_app_details">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/building"/>

    <TextView
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:background="@color/purple"
        android:layout_height="wrap_content"
        android:text="App Details"/>


    <TextView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:text="Version:  0.0.1\nDeveloper: Nebula Developers\nPrivacy Policy: www.jcu.edu.au/privacy"
        android:layout_height="wrap_content"/>

</LinearLayout>
